<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:padding="30dp"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android VS. iOS"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="30dp"
            android:textColor="@color/colorAccent"/>

    <TextView
            android:id="@+id/androidCount"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="ANDROID: 0"/>

    <TextView
            android:id="@+id/iosCount"
            app:layout_constraintTop_toBottomOf="@id/androidCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="iOS: 0"/>

    <Button
            android:id="@+id/btnAndroid"
            app:layout_constraintTop_toBottomOf="@id/iosCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Vote for Android"/>

    <Button
            android:id="@+id/btnIOS"
            app:layout_constraintTop_toBottomOf="@id/btnAndroid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Vote for iOS"/>


</android.support.constraint.ConstraintLayout>